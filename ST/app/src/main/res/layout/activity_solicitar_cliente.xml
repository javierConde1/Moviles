<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Solicitar_cliente">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="15dp"
                android:text="Ingresa lo que falla."
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cbx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Panel." />

            <CheckBox
                android:id="@+id/cbx2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bateria." />

            <CheckBox
                android:id="@+id/cbx3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contra chapa." />

            <CheckBox
                android:id="@+id/cbx4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerca electrica." />

            <CheckBox
                android:id="@+id/cbx5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerebro." />

            <CheckBox
                android:id="@+id/cbx6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cableado." />

            <CheckBox
                android:id="@+id/cbx7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sensores." />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Describe detalladamente el problema."
                android:textColor="@color/colorPrimary"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/et_desc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnSol_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="solicitar"
                android:text="Enviar" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>