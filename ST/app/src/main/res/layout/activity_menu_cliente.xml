<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_cliente">
    <Button
        android:id="@+id/btnEstatus"
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:layout_weight="1"
        android:background="@drawable/status_icon"
        android:onClick="Estatus" />

    <Button
        android:id="@+id/btnSolicitar"
        android:layout_width="wrap_content"
        android:layout_height="174dp"
        android:layout_weight="1"
        android:background="@drawable/request_icon"
        android:onClick="Solicitar"
        />

</LinearLayout>