<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info_recycler_tecnico"
    android:padding="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/textViewNoCliente_Tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Cliente"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewNoCliente_Tecnico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textViewProblema_Tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Problema"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewProblema_Tecnico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewFecha_Tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha en que se hizÃ³ la orden"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewFecha_Tecnico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewFechaProg_Tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fecha programada"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewFechaProg_Tecnico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewPrioridad_Tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prioridad"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewPrioridad_Tecnico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewDomicilio_Tecnico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domicilio"
            android:textColor="#000000"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewDomicilio_Tecnico2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btnRegresar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar"
            android:textColor="#000000"
            android:background="@color/colorPrimaryDark"/>

    </LinearLayout>

</LinearLayout>